<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/app_lycard"
        android:background="@color/app_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar"
        android:background="@color/app_white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_update_pwds"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_toolbar"
            android:layout_marginLeft="@dimen/app_myself_left_mar"
            android:background="@android:color/transparent"
            android:maxLength="10"
            android:password="true"
            android:text="123346"
            android:textSize="@dimen/app_text_normal" />
        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/rl_dds">

            <Button
                android:id="@+id/btn_del"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="15dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@mipmap/del" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:onClick="del"/>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rl_dds"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/btn_sees"
                android:layout_width="30dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/app_myself_left_mar"
                android:background="@mipmap/eyes"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:onClick="oldsee" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_background" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar"
        android:background="@color/app_white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_pwds_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/app_toolbar"
            android:layout_marginLeft="@dimen/app_myself_left_mar"
            android:background="@android:color/transparent"
            android:hint="请输入新密码"
            android:maxLength="10"
            android:password="true"
            android:textSize="@dimen/app_text_normal" />

        <RelativeLayout
            android:id="@+id/rl_see"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <Button
                android:id="@+id/btn_see"
                android:layout_width="30dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/app_myself_left_mar"
                android:background="@mipmap/eyes"
                android:textSize="@dimen/app_text_normal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@null"
                android:onClick="newsee" />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_background" />

</LinearLayout>
