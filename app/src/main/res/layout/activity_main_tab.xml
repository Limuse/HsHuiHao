<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_viewcard" />

    <RelativeLayout
        android:id="@+id/community_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bottom"
        android:background="@color/app_bottom"
        android:paddingBottom="1dp"
        android:paddingTop="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/find"
                    android:layout_width="@dimen/app_bottom_btn"
                    android:layout_height="@dimen/app_bottom_btn"
                    android:layout_centerInParent="true"
                    android:background="#ffffff"
                    android:text="1" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/friendmsg"
                    android:layout_width="@dimen/app_bottom_btn"
                    android:layout_height="@dimen/app_bottom_btn"
                    android:layout_centerInParent="true"
                    android:background="#ffffff"
                    android:text="2" />

                <TextView
                    android:id="@+id/unread_msg_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="1dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/releaseto"
                    android:layout_width="@dimen/app_bottom_btn"
                    android:layout_height="@dimen/app_bottom_btn"
                    android:layout_centerInParent="true"
                    android:background="#ffffff"
                    android:text="3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/my"
                    android:layout_width="@dimen/app_bottom_btn"
                    android:layout_height="@dimen/app_bottom_btn"
                    android:layout_centerInParent="true"
                    android:background="#ffffff"
                    android:text="4" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/other"
                    android:layout_width="@dimen/app_bottom_btn"
                    android:layout_height="@dimen/app_bottom_btn"
                    android:layout_centerInParent="true"
                    android:background="#ffffff"
                    android:text="5" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>