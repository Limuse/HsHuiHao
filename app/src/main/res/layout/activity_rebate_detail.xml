<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_line" />


    <ListView
        android:id="@+id/lv_redatil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:cacheColorHint="#00000000"
        android:clickable="true"
        android:divider="@null"
        android:fadingEdge="none"
        android:focusable="true"
        android:layoutAnimation="@anim/navagation_listview_anim4"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_rebt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_shop"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_alignBottom="@+id/rebt"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="50dp"
            android:background="@mipmap/mmoney" />

        <TextView
            android:id="@+id/rebt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="暂无返利明细"
            android:textColor="@color/app_text_dark"
            android:textSize="@dimen/app_text_big" />

        <Button
            android:id="@+id/btn_rebt"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_alignTop="@+id/rebt"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="42dp"
            android:background="@drawable/btn_ok"
            android:text="去逛逛"
            android:textColor="@color/app_green"
            android:textSize="@dimen/app_text_big" />
    </RelativeLayout>

</LinearLayout>
