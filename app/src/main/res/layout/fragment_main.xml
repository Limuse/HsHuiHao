<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_line"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="top"
        android:background="@color/app_white">

        <RelativeLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_press"
            android:clickable="true"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/message" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="HUIHAO"
            android:textColor="@color/app_green"
            android:textSize="24sp"
            android:textStyle="bold" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/app_line" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/Rel0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null">

            <com.huihao.custom.ImageCycleView
                android:id="@+id/ImageCycleView"
                android:layout_width="match_parent"
                android:layout_height="256dp"></com.huihao.custom.ImageCycleView>


            <RelativeLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:layout_below="@+id/ImageCycleView"
                android:layout_marginTop="@dimen/app_viewcard"
                android:background="@null">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/view"
                    android:background="@drawable/btn_press"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tv_title1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="16dp"
                        android:text="逍遥护理"
                        android:textColor="@color/app_text_dark"
                        android:textSize="@dimen/app_text_normal" />

                    <TextView
                        android:id="@+id/tv_price1"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/tv_title1"
                        android:layout_marginLeft="15dp"
                        android:text="￥228"
                        android:textColor="@color/app_orange"
                        android:textSize="@dimen/app_text_normal" />

                    <Button
                        android:id="@+id/tv_buy1"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/tv_price1"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/buy_press"
                        android:text="立即购买"
                        android:textColor="@color/app_white"
                        android:textSize="10sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:layout_toRightOf="@+id/tv_title1"
                        android:background="@mipmap/ic_launcher" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/view"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@null"></RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/view"
                    android:background="@drawable/btn_press"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tv_title2"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="16dp"
                        android:text="把根留住"
                        android:textColor="@color/app_text_dark"
                        android:textSize="@dimen/app_text_normal" />

                    <TextView
                        android:id="@+id/tv_price2"
                        android:layout_width="65dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/tv_title2"
                        android:layout_marginLeft="15dp"
                        android:text="￥998"
                        android:textColor="@color/app_orange"
                        android:textSize="@dimen/app_text_normal" />

                    <Button
                        android:id="@+id/tv_buy2"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/tv_price2"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/buy_press"
                        android:text="立即购买"
                        android:textColor="@color/app_white"
                        android:textSize="10sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="6dp"
                        android:layout_toRightOf="@+id/tv_title2"
                        android:background="@mipmap/ic_launcher" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Rel1"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/line1"
                android:layout_marginTop="@dimen/app_viewcard"
                android:background="@color/app_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="全部产品"
                    android:textColor="@color/app_text_dark"
                    android:textSize="@dimen/app_text_normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:layout_below="@+id/Rel1"
                android:layout_marginTop="@dimen/app_viewcard"
                android:background="@null">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/view2"
                    android:background="@drawable/btn_press"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tv_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="16dp"
                        android:text="把根留住洗发水"
                        android:textColor="@color/app_text_dark"
                        android:textSize="@dimen/app_text_big" />

                    <TextView
                        android:id="@+id/tv_info3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title3"
                        android:layout_marginLeft="15dp"
                        android:text="天然植物头皮护理"
                        android:textColor="@color/app_text_light"
                        android:textSize="@dimen/app_text_normal" />

                    <TextView
                        android:id="@+id/tv_price3"
                        android:layout_width="65dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/tv_info3"
                        android:layout_marginLeft="15dp"
                        android:text="￥998"
                        android:textColor="@color/app_orange"
                        android:textSize="@dimen/app_text_normal" />


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="120dp"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_price3"
                        android:layout_margin="12dp"
                        android:background="@mipmap/ic_launcher" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/view2"
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@null"></RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/view2"
                    android:background="@null">


                    <RelativeLayout
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_centerVertical="true"
                        android:background="@null"></RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/view3"
                        android:background="@drawable/btn_press"
                        android:clickable="true">

                        <TextView
                            android:id="@+id/tv_title5"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="24dp"
                            android:text="逍遥护理"
                            android:textColor="@color/app_text_dark"
                            android:textSize="@dimen/app_text_normal" />

                        <TextView
                            android:id="@+id/tv_price5"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_below="@+id/tv_title5"
                            android:layout_marginLeft="15dp"
                            android:text="￥228"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/app_text_normal" />


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="6dp"
                            android:layout_toRightOf="@+id/tv_title5"
                            android:background="@mipmap/ic_launcher" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/view3"
                        android:background="@drawable/btn_press"
                        android:clickable="true">

                        <TextView
                            android:id="@+id/tv_title4"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="24dp"
                            android:text="纳多卫生巾"
                            android:textColor="@color/app_text_dark"
                            android:textSize="@dimen/app_text_normal" />

                        <TextView
                            android:id="@+id/tv_price4"
                            android:layout_width="80dp"
                            android:layout_height="25dp"
                            android:layout_below="@+id/tv_title4"
                            android:layout_marginLeft="15dp"
                            android:text="￥98"
                            android:textColor="@color/app_orange"
                            android:textSize="@dimen/app_text_normal" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="6dp"
                            android:layout_toRightOf="@+id/tv_title4"
                            android:background="@mipmap/ic_launcher" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <com.huihao.custom.NoScrollGridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rel2"
                android:layout_marginTop="@dimen/app_viewcard"
                android:background="@null"
                android:cacheColorHint="@color/app_line"
                android:horizontalSpacing="0.8dp"
                android:numColumns="2"
                android:verticalSpacing="0.8dp"></com.huihao.custom.NoScrollGridView>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>