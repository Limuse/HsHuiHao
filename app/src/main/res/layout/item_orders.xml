<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0.5dp"
        android:background="@color/app_white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_das"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/app_myself_left_mar"
                android:text="订单号："
                android:textColor="@color/app_text_light"
                android:textSize="@dimen/app_text_normal" />

            <TextView
                android:id="@+id/tv_nnums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/tv_da"
                android:text="4006466471"

                android:textColor="@color/app_text_light"
                android:textSize="@dimen/app_text_normal" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_dstate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/app_myself_left_mar"
            android:gravity="center"
            android:text="交易成功"
            android:textColor="@color/app_text_light"
            android:textSize="@dimen/app_text_normal" />
    </RelativeLayout>

    <com.huihao.custom.IlistView
        android:id="@+id/ilistvew"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@null"
        android:cacheColorHint="#00000000"
        android:clickable="true"
        android:divider="@null"
        android:fadingEdge="none"
        android:focusable="true"
        android:layoutAnimation="@anim/navagation_listview_anim4"
        android:listSelector="#00000000"
        android:scrollbars="none" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/app_white">

        <TextView
            android:id="@+id/hej"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_myself_left_mar"
            android:text="合计："
            android:textColor="@color/app_text_dark"
            android:textSize="@dimen/app_text_big" />

        <TextView
            android:id="@+id/tv_hejs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/hej"
            android:text="￥197.80"
            android:textColor="@color/app_orange"
            android:textSize="@dimen/app_text_big" />

        <Button
            android:id="@+id/btn_dddd"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_sed"
            android:background="@drawable/btn_out"
            android:text="查看物流"
            android:textColor="@color/app_text_light"
            android:textSize="@dimen/app_text_big" />

        <Button
            android:id="@+id/btn_sed"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_myself_left_mar"
            android:background="@drawable/btn_add"
            android:text="确认收货"
            android:textColor="@color/app_orange"
            android:textSize="@dimen/app_text_big" />

    </RelativeLayout>

</LinearLayout>
