<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_white"
    android:orientation="vertical"
    android:paddingRight="-90dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >



            <LinearLayout
                android:id="@+id/ly_ma"
                android:background="@drawable/btn_press"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <CheckBox
                    android:id="@+id/cb_item_checkbox"
                    style="@style/Checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false" />

                <LinearLayout
                    android:id="@+id/ly_items"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_til"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="left" />

                    <LinearLayout
                        android:id="@+id/ly_match"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_item_bgaswipe_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="6dp"
                            android:ellipsize="end"
                            android:maxEms="12"
                            android:onClick="true"
                            android:singleLine="true"
                            android:text="把根留住火麻茶麸洗发洗发露露"
                            android:textColor="@drawable/shop_item_text_color"
                            android:textSize="@dimen/app_text_big" />

                        <LinearLayout
                            android:id="@+id/ly_sizes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tv_color"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginRight="4dp"
                                android:textColor="@color/app_text_light"
                                android:textSize="@dimen/app_text_normal" />






                            <TextView
                                android:id="@+id/tv_sizes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginRight="4dp"
                                android:textColor="@color/app_text_light"
                                android:textSize="@dimen/app_text_normal" />





                            <TextView
                                android:id="@+id/tv_res"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:text=""
                                android:textColor="@color/app_text_light"
                                android:textSize="@dimen/app_text_normal" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/ls"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_tt"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="￥"
                                        android:textColor="@color/app_orange"
                                        android:textSize="@dimen/app_text_big" />

                                    <TextView
                                        android:id="@+id/tv_money"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="998.00"
                                        android:textColor="@color/app_orange"
                                        android:textSize="@dimen/app_text_big" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ly_nu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_gravity="center_horizontal|right"
                                    android:layout_marginRight="4dp"
                                    android:layout_marginTop="0dp"
                                    android:orientation="horizontal">

                                    <Button
                                        android:id="@+id/btn_jian"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/btn_num_left"
                                        android:text="-"
                                        android:textColor="@color/app_text_dark"
                                        android:textSize="@dimen/app_text_big" />


                                    <RelativeLayout
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent">

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="0.5dp"
                                            android:layout_alignParentTop="true"
                                            android:layout_alignTop="@+id/et_num"
                                            android:background="@color/app_line"></View>

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="0.5dp"
                                            android:layout_alignBottom="@+id/et_num"
                                            android:layout_alignParentBottom="true"
                                            android:background="@color/app_line"></View>

                                        <Button
                                            android:id="@+id/et_num"
                                            android:layout_width="40dp"
                                            android:layout_height="match_parent"
                                            android:background="@null"
                                            android:cursorVisible="false"
                                            android:gravity="center"
                                            android:textColor="@color/app_text_dark"
                                            android:textSize="@dimen/app_text_big" />
                                    </RelativeLayout>

                                    <Button
                                        android:id="@+id/btn_jia"
                                        android:layout_width="40dp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/btn_num_right"
                                        android:text="+"
                                        android:textColor="@color/app_text_dark"
                                        android:textSize="@dimen/app_text_big" />

                                </LinearLayout>

                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/tv_item_bgaswipe_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_btn_red"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="删除"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/app_text_big" />
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/app_background" />

    </LinearLayout>
</LinearLayout>
