<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_dd"
        android:layout_marginTop="@dimen/app_lycard"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="0.5dp"
        android:background="@color/app_white">

        <TextView
            android:id="@+id/tv_da"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_myself_left_mar"
            android:text="订单号："
            android:textColor="@color/app_text_light"
            android:textSize="@dimen/app_text_normal" />

        <TextView
            android:id="@+id/tv_nnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_da"
            android:text="4006466471"
            android:textColor="@color/app_text_light"
            android:textSize="@dimen/app_text_normal" />

        <TextView
            android:id="@+id/tv_ds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_myself_left_mar"
            android:text="待收货"
            android:textColor="@color/app_text_light"
            android:textSize="@dimen/app_text_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_par"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="0.5dp"
        android:background="@color/app_white">

        <LinearLayout
            android:id="@+id/ly_pna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/app_myself_left_mar"
                android:text="伙伴名称："
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_big" />

            <TextView
                android:id="@+id/tv_pnam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:text="张三"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_big" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_mo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_pna"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_mo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/app_myself_left_mar"
                android:text="订单总额：  ￥"
                android:layout_gravity="center_vertical"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_big" />

            <TextView
                android:id="@+id/tv_mos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98.90"
                android:layout_gravity="center_vertical"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_big" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/app_white"
        android:layout_marginBottom="0.5dp"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_mma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_myself_left_mar"
            android:text="返利总额：   "
            android:textColor="@color/app_text_dark"
            android:textSize="@dimen/app_text_big" />

        <TextView
            android:id="@+id/tv_mmmo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_mma"
            android:text="￥10.00"
            android:textColor="#ff4400"
            android:textSize="@dimen/app_text_big" />
        <TextView
            android:id="@+id/tv_mss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/app_myself_left_mar"
            android:text="退款中"
            android:textColor="@color/app_text_light"
            android:textSize="@dimen/app_text_normal" />
    </RelativeLayout>

</LinearLayout>
