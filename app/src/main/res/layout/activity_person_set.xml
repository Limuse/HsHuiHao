<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:background="@color/app_background"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/app_lycard"
        android:background="@color/app_background" />
    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar"
        android:background="@drawable/btn_press"
        android:clickable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_myself_left_mar"
            android:text="汇好头像"
            android:textColor="@color/app_text_dark"
            android:textSize="@dimen/app_myself_tex" />

        <com.huihao.custom.CircleImageView
            android:id="@+id/setting_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/blues_bg"
            app:border_width="0.5dp"
            app:border_color="@android:color/transparent"
            android:layout_marginRight="@dimen/app_setting_right"
            android:layout_toLeftOf="@+id/img_rightim"
            />

        <ImageView
            android:id="@+id/img_rightim"
            android:layout_width="@dimen/app_myself_right_image"
            android:layout_height="@dimen/app_myself_right_image"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_myself_left_mar"
            android:src="@mipmap/right_to" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_background" />
    <RelativeLayout
        android:id="@+id/rl_numss"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar"
        android:background="@drawable/btn_press"
        android:clickable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_myself_left_mar"
            android:text="绑定代理商编号"
            android:textColor="@color/app_text_dark"
            android:textSize="@dimen/app_myself_tex" />

        <TextView
            android:id="@+id/setting_numsss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_setting_right"
            android:layout_toLeftOf="@+id/img_right6"
            android:text=""
            android:textColor="@color/app_text_dark" />

        <ImageView
            android:id="@+id/img_right6"
            android:layout_width="@dimen/app_myself_right_image"
            android:layout_height="@dimen/app_myself_right_image"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_myself_left_mar"
            android:src="@mipmap/right_to" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_background" />

    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar"
        android:background="@drawable/btn_press"
        android:clickable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_myself_left_mar"
            android:text="昵称"
            android:textColor="@color/app_text_dark"
            android:textSize="@dimen/app_myself_tex" />

        <TextView
            android:id="@+id/setting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_setting_right"
            android:layout_toLeftOf="@+id/img_right2"
            android:text="张富贵"
            android:textColor="@color/app_text_dark" />

        <ImageView
            android:id="@+id/img_right2"
            android:layout_width="@dimen/app_myself_right_image"
            android:layout_height="@dimen/app_myself_right_image"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_myself_left_mar"
            android:src="@mipmap/right_to" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_background" />

    <RelativeLayout
        android:id="@+id/rl_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar"
        android:background="@drawable/btn_press"
        android:clickable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_myself_left_mar"
            android:text="修改密码"
            android:textColor="@color/app_text_dark"
            android:textSize="@dimen/app_myself_tex" />


        <ImageView
            android:id="@+id/img_right4"
            android:layout_width="@dimen/app_myself_right_image"
            android:layout_height="@dimen/app_myself_right_image"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_myself_left_mar"
            android:src="@mipmap/right_to" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_background" />
</LinearLayout>
