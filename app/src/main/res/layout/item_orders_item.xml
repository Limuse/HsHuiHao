<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">


    <LinearLayout
        android:id="@+id/ly_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:layout_marginBottom="0.5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_tilz"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/app_myself_left_mar"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:gravity="left" />

        <LinearLayout
            android:id="@+id/ly_match"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_otitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxEms="15"
                android:onClick="true"
                android:singleLine="true"
                android:text="把根留住火麻茶麸洗发麸洗发露"
                android:textColor="@drawable/shop_item_text_color"
                android:textSize="@dimen/app_text_big" />

            <LinearLayout
                android:id="@+id/ly_sizes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_colorz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/app_text_light"
                    android:textSize="@dimen/app_text_normal" />





                <TextView
                    android:id="@+id/tv_sizes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/app_text_light"
                    android:textSize="@dimen/app_text_normal" />


                <TextView
                    android:id="@+id/tv_resa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text=""
                    android:textColor="@color/app_text_light"
                    android:textSize="@dimen/app_text_normal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="￥"
                    android:textColor="@color/app_text_dark"
                    android:textSize="@dimen/app_text_big" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="98.00"
                    android:textColor="@color/app_text_dark"
                    android:textSize="@dimen/app_text_big" />

                <LinearLayout
                    android:id="@+id/ly_nu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_oldm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="￥108.0"
                        android:textColor="@color/app_text_light"
                        android:textSize="@dimen/app_text_normal" />

                    <View
                        android:layout_width="48dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="-9dp"
                        android:background="@color/app_conp_text" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_sssnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="35dp"
                    android:text="X1"
                    android:textColor="@color/app_text_dark"
                    android:textSize="@dimen/app_text_big" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
