<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:id="@+id/tv_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="4dp"
            android:text="2015年5月15日 09：30:01"
            android:textColor="@color/app_text_light"
            android:textSize="@dimen/app_text_normal" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/app_myself_left_mar"
        android:layout_marginRight="@dimen/app_myself_left_mar"
        android:background="@drawable/edt_bk"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/ddd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/app_myself_left_mar"
                android:text="新订单通知"
                android:textColor="@color/app_text_dark"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/tv_3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/ddd"
                android:background="@drawable/clicer"

                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/app_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交时间："
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/app_myself_left_mar"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_normal"/>
            <TextView
                android:id="@+id/tv_sutime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015年5月15日  11::45:30"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/app_myself_left_mar"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_normal"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户信息："
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/app_myself_left_mar"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_normal"/>
            <TextView
                android:id="@+id/tv_khxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浙江省杭州市  张富贵"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/app_myself_left_mar"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_normal"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额："
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/app_myself_left_mar"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_normal"/>
            <TextView
                android:id="@+id/tv_odm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99,900.00"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/app_myself_left_mar"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:layout_gravity="center_vertical"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_small"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获得佣金："
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/app_myself_left_mar"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_normal"/>
            <TextView
                android:id="@+id/tv_yj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.00"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/app_myself_left_mar"
                android:textColor="@color/app_orange"
                android:textSize="@dimen/app_text_normal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:layout_gravity="center_vertical"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_normal"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/app_background"
            android:layout_marginLeft="@dimen/app_myself_left_mar"
            android:layout_marginRight="@dimen/app_myself_left_mar"/>
        <RelativeLayout
            android:id="@+id/rl_xiangq"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginRight="1.5dp"
            android:layout_marginLeft="1.5dp"
            android:layout_marginBottom="1.5dp"
            android:background="@drawable/btn_press">

            <TextView
                android:id="@+id/tv_chak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:layout_centerVertical="true"
                android:textColor="@color/app_text_light"
                android:textSize="@dimen/app_text_normal"
                android:layout_toStartOf="@+id/iv"
                android:layout_marginRight="@dimen/app_myself_left_mar"
                />
            <ImageView
                android:id="@+id/iv"
                android:layout_width="@dimen/app_myself_right_image"
                android:layout_height="@dimen/app_myself_right_image"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/app_myself_left_mar"
                android:src="@mipmap/right_to" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
