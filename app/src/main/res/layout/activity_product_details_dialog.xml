<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:clipToPadding="false"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@null">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/alp"
            android:background="@color/app_white"
            android:paddingLeft="128dp">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="￥998"
                android:textColor="@color/app_orange"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_price"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="350ml"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_normal" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_size"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:text="库存9999件"
                android:textColor="@color/app_text_light"
                android:textSize="@dimen/app_text_normal" />

            <Button
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@null"></RelativeLayout>

        <RelativeLayout
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="24dp"
            android:background="@color/app_white">

            <ImageView
                android:id="@+id/image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/image1" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/app_line"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="规格"
            android:textColor="@color/app_text_light"
            android:textSize="@dimen/app_text_normal" />

        <com.huihao.custom.TagGroup
            app:isAppendMode="true"
            android:id="@+id/tag_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>