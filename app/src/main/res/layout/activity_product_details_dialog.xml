<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:clipToPadding="false"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="@null">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/alp"
            android:background="@color/app_white"
            android:paddingLeft="144dp">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/app_orange"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_price"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_normal" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_size"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/app_text_light"
                android:textSize="@dimen/app_text_normal" />

            <RelativeLayout
                android:id="@+id/btn_close"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/btn_press"
                android:clickable="true">


                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/x"
                    android:clickable="false" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alp"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@null"></RelativeLayout>

        <RelativeLayout
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:layout_marginLeft="24dp"
            android:background="@color/app_white">

            <ImageView
                android:id="@+id/image"
                android:layout_width="116dp"
                android:layout_height="116dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/app_line"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="规格"
            android:textColor="@color/app_text_light"
            android:textSize="@dimen/app_text_normal" />

        <ScrollView
            android:id="@+id/tag_scroll"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <com.huihao.custom.TagGroup
                    android:id="@+id/tag_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:isAppendMode="true" />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/app_white"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/app_line"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="数量"
            android:textColor="@color/app_text_light"
            android:textSize="@dimen/app_text_normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_l"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num_left"
                android:text="-"
                android:textColor="@color/app_text_light"
                android:textSize="@dimen/app_text_big" />


            <RelativeLayout
                android:layout_width="56dp"
                android:layout_height="match_parent">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignTop="@+id/et_num"
                    android:background="@color/app_line"></View>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignBottom="@+id/et_num"
                    android:layout_alignParentBottom="true"
                    android:background="@color/app_line"></View>

                <Button
                    android:id="@+id/et_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:gravity="center"
                    android:textColor="@color/app_text_dark"
                    android:textSize="@dimen/app_text_big" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_r"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_num_right"
                android:text="+"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_text_big" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="@color/app_line"></View>

    <LinearLayout
        android:id="@+id/Lin_choose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="138dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_add"
                android:gravity="center"
                android:onClick="add"
                android:text="加入购入车"
                android:textColor="@color/app_orange"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_buy"
                android:layout_width="138dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_buy"
                android:gravity="center"
                android:onClick="buy"
                android:text="立即购买"
                android:textColor="@color/app_white"
                android:textSize="18dp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Lin_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_buy"
            android:gravity="center"
            android:onClick="buy"
            android:text="确定"
            android:textColor="@color/app_white"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>