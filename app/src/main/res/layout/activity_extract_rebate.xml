<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_background" />

    <RelativeLayout
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar"
        android:layout_marginTop="@dimen/app_lycard"
        android:background="@drawable/btn_press"
        android:clickable="true">

        <LinearLayout
            android:id="@+id/ll_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_marginLeft="@dimen/app_myself_left_mar"
                android:text="支付宝账号"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_myself_tex" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ll_acc"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_acca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18762546321"
                android:textColor="@color/app_text_dark"
                android:textSize="@dimen/app_myself_tex" />

            <TextView
                android:id="@+id/tv_nn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="张根硕"
                android:textColor="@color/app_text_light"
                android:textSize="@dimen/app_text_normal" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/app_myself_right_image"
            android:layout_height="@dimen/app_myself_right_image"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_myself_left_mar"
            android:src="@mipmap/right_to" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_background" />
    <RelativeLayout
        android:id="@+id/rl_apnum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_toolbar"
        android:background="@drawable/btn_press"
        android:clickable="true">


        <TextView
            android:id="@+id/tv_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/app_myself_left_mar"
            android:text="金额"
            android:textColor="@color/app_text_dark"
            android:textSize="@dimen/app_myself_tex" />

        <EditText
            android:id="@+id/et_mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
           android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:hint="请输入提取金额（元）"
            android:textColor="@color/app_text_dark"
            android:textSize="@dimen/app_text_normal" />

        <ImageView
            android:id="@+id/img_right1ss"
            android:layout_width="@dimen/app_myself_right_image"
            android:layout_height="@dimen/app_myself_right_image"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/app_myself_left_mar"
            android:src="@mipmap/right_to" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="40dp"
        android:background="@drawable/sure_ok"
        android:text="确定"
        android:textColor="@color/app_white"
        android:textSize="@dimen/app_text_big"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

</LinearLayout>
