<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/app_white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/app_myself_left_mar"
        android:layout_toRightOf="@+id/ll_acc"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="待打款"
            android:textColor="@color/app_text_dark"
            android:textSize="@dimen/app_myself_tex" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="2015-01-20"
            android:textColor="@color/app_text_light"
            android:textSize="@dimen/app_text_normal" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_m3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/app_setting_right"
        android:layout_toLeftOf="@+id/img_right2"
        android:text="100.00"
        android:textColor="@color/app_orange" />

    <ImageView
        android:id="@+id/img_right2"
        android:layout_width="@dimen/app_myself_right_image"
        android:layout_height="@dimen/app_myself_right_image"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/app_myself_left_mar"
        android:src="@mipmap/right_to" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_background"/>

</RelativeLayout>
