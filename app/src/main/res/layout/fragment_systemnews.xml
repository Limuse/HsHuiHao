<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_nal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.huihao.custom.IlistView
                    android:id="@+id/lv_systemd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:cacheColorHint="#00000000"
                    android:clickable="true"
                    android:divider="@null"
                    android:fadingEdge="none"
                    android:focusable="true"
                    android:layoutAnimation="@anim/navagation_listview_anim4"
                    android:listSelector="#00000000"
                    android:scrollbars="none" />


            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_neww"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
      >

        <ImageView
            android:id="@+id/img_shop"
            android:layout_width="113dp"
            android:layout_height="113dp"
            android:layout_alignBottom="@+id/tasss"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="50dp"
            android:background="@mipmap/newss" />

        <TextView
            android:id="@+id/tasss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="您暂时没有任何消息哦"
            android:textColor="@color/app_text_dark"
            android:textSize="@dimen/app_text_big" />


    </RelativeLayout>

</RelativeLayout>
